<Window x:Class="MoneyFlowWPF.SingleCategorySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор категории"
        Height="365"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid RenderTransformOrigin="0.491,0.903" Margin="0,0,0,14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#2E7D32" 
                Padding="10">
            <TextBlock Text="🔍 Выберите категорию"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Содержимое -->
        <StackPanel Grid.Row="1" 
                    Margin="20,25,20,20">
            <TextBlock x:Name="PromptText"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"
                       TextAlignment="Center" Height="100"/>
            <ComboBox x:Name="CategoryComboBox"
                      FontSize="14"
                      Padding="12"
                      Height="62" RenderTransformOrigin="0.492,0.733"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,0,20,15">
            <Button Content="Пропустить" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#9E9E9E"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="SkipButton_Click"/>
            <Button Content="ОК" 
                    Width="100" 
                    Height="35"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>