<Window x:Class="MoneyFlowWPF.ChartsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="📊 Графики" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#2E7D32" 
                Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📊 Аналитика и графики" 
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <ComboBox x:Name="PeriodComboBox"
                          Width="150"
                          Height="30"
                          Margin="20,0,10,0"
                          SelectedIndex="0">
                    <ComboBoxItem Content="За последний месяц"/>
                    <ComboBoxItem Content="За весь период"/>
                </ComboBox>

                <Button Content="Обновить" 
                        Width="100"
                        Height="30"
                        Margin="10,0,0,0"
                        Background="White"
                        Foreground="#2E7D32"
                        FontWeight="Bold"
                        Click="RefreshButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Графики -->
        <TabControl Grid.Row="1" Margin="10">

            <!-- Отчёт по категориям (доходы и расходы отдельно) -->
            <TabItem Header="🗂️ Диаграмма по категориям">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <!-- Доходы -->
                        <TextBlock Text="📈 Доходы по категориям"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
                        <DataGrid x:Name="IncomeCategoriesGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      RowBackground="White"
                      AlternatingRowBackground="#E8F5E9">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}" Width="*"/>
                                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat={}{0:C}}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="Green"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="% от доходов" Binding="{Binding Percent, StringFormat={}{0:F1}%}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Расходы -->
                        <TextBlock Text="📉 Расходы по категориям"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,20,0,10"/>
                        <DataGrid x:Name="ExpenseCategoriesGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      RowBackground="White"
                      AlternatingRowBackground="#FFEBEE">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}" Width="*"/>
                                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat={}{0:C}}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="Red"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="% от расходов" Binding="{Binding Percent, StringFormat={}{0:F1}%}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- График баланса по месяцам -->
            <TabItem Header="📅 По месяцам">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <oxy:PlotView x:Name="MonthlyPlot"
                                  Grid.Row="0"
                                  Margin="10"/>

                    <TextBlock Grid.Row="1" 
                               Text="Изменение баланса по месяцам"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,10"
                               FontSize="14"/>
                </Grid>
            </TabItem>
            <TabItem Header="📊 Гистограмма">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <oxy:PlotView x:Name="HistogramPlot"
                      Grid.Row="0"
                      Margin="10"/>
                    <TextBlock Grid.Row="1" 
                   Text="Расходы по категориям (все)"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"
                   FontSize="14"/>
                </Grid>
            </TabItem>
            <!-- Помесячный отчёт (таблица) -->
            <TabItem Header="📆 Помесячный отчёт">
                <Grid Margin="10">
                    <DataGrid x:Name="MonthlyReportGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  RowBackground="White"
                  AlternatingRowBackground="#F9F9F9">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTotalRow}" Value="True">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Background" Value="#FFF9C4"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Месяц" Binding="{Binding MonthLabel}" Width="100"/>
                            <DataGridTextColumn Header="Доходы" Binding="{Binding Income, StringFormat={}{0} ₽}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Расходы" Binding="{Binding Expense, StringFormat={}{0} ₽}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Баланс" Binding="{Binding Balance, StringFormat={}{0} ₽}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPositiveBalance}" Value="True">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsPositiveBalance}" Value="False">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <!-- Отчёт по категориям (таблица) -->
            <TabItem Header="🗂️ Отчет по категориям">
                <DataGrid x:Name="CategoriesReportGrid"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              GridLinesVisibility="All"
              RowBackground="White"
              AlternatingRowBackground="#F9F9F9">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}" Width="*"/>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat={}{0:C}}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="Red"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="% от расходов" Binding="{Binding Percent, StringFormat={}{0:F1}%}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <!-- Добавьте ЭТУ вкладку в начало TabControl -->
            <TabItem Header="📈 Круговая диаграмма">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <oxy:PlotView x:Name="CategoriesPlot" Grid.Row="0" Margin="10"/>
                    <TextBlock Grid.Row="1" 
                   Text="Распределение расходов по категориям (топ-8)"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"
                   FontSize="14"/>
                </Grid>
            </TabItem>


        </TabControl>

    </Grid>

</Window>