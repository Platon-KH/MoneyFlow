<Window x:Class="MoneyFlowWPF.PdfDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отладка PDF" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="10">
            <TextBlock Text="🔧 Отладка PDF парсера" 
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"/>
        </Border>

        <!-- Текст PDF -->
        <TextBox x:Name="PdfTextTextBox"
                 Grid.Row="1"
                 Margin="10"
                 FontFamily="Consolas"
                 FontSize="12"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 TextWrapping="NoWrap"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="10">

            <Button Content="Копировать" 
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="CopyButton_Click"/>

            <Button Content="Закрыть" 
                    Width="100"
                    Height="30"
                    Click="CloseButton_Click"/>

        </StackPanel>

    </Grid>

</Window>