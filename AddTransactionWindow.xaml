<Window x:Class="MoneyFlowWPF.AddTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить операцию" 
        Height="573" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2E7D32" CornerRadius="5" Padding="10" Margin="0,0,0,15">
            <TextBlock Text="➕ Новая операция" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Height="377">
            <GroupBox Header="Тип операции" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <RadioButton x:Name="IncomeRadio" Content="Доход" Margin="0,0,20,0" GroupName="TypeGroup" IsChecked="True" FontSize="14"/>
                    <RadioButton x:Name="ExpenseRadio" Content="Расход" GroupName="TypeGroup" FontSize="14"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Сумма *" Margin="0,0,0,15">
                <TextBox x:Name="AmountTextBox" FontSize="16" FontWeight="Bold" Padding="10" TextAlignment="Right" PreviewTextInput="AmountTextBox_PreviewTextInput"/>
            </GroupBox>

            <GroupBox Header="Дата операции" Margin="0,0,0,15">
                <DatePicker x:Name="DatePicker" FontSize="14" Padding="5"/>
            </GroupBox>

            <GroupBox Header="Категория *" Margin="0,0,0,15">
                <ComboBox x:Name="CategoryComboBox"
                          FontSize="14"
                          Padding="5"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"/>
            </GroupBox>

            <GroupBox Header="Описание">
                <TextBox x:Name="DescriptionTextBox"
                         FontSize="14"
                         Padding="5"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" Width="210">
            <Button Content="Отмена" Width="100" Height="35" Margin="0,0,10,0"
                    Background="#9E9E9E" Foreground="White" FontWeight="Bold" Click="CancelButton_Click"/>
            <Button Content="Сохранить" Width="100" Height="35"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>