<Window x:Class="MoneyFlowWPF.ImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Импорт выписки" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" 
                Background="#673AB7" 
                CornerRadius="5"
                Padding="10"
                Margin="0,0,0,15">
            <TextBlock Text="📁 Импорт банковской выписки" 
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель выбора файла -->
            <Border Grid.Row="0" 
        Background="#F5F5F5" 
        CornerRadius="5"
        Padding="15"
        Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Выберите файл для импорта:" 
                   FontSize="14"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="FilePathTextBox" 
                     Grid.Column="0"
                     IsReadOnly="True"
                     Padding="10"
                     FontSize="14"/>

                        <Button x:Name="BrowseButton" 
                    Grid.Column="1"
                    Content="Обзор..."
                    Width="100"
                    Height="35"
                    Margin="10,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BrowseButton_Click"/>

                        <Button x:Name="DebugButton" 
                    Grid.Column="2"
                    Content="🔧 Отладка"
                    Width="100"
                    Height="35"
                    Background="#FF9800"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="DebugButton_Click"/>
                    </Grid>

                    <TextBlock Text="Поддерживаемые форматы: PDF, CSV" 
                   FontSize="12"
                   Foreground="Gray"
                   Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Предпросмотр -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="5"
                    Padding="10"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Найденные операции:" 
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <DataGrid x:Name="PreviewGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserSortColumns="True"
                              GridLinesVisibility="None">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата" 
                                                Binding="{Binding Date, StringFormat=dd.MM.yyyy}"
                                                Width="100"/>

                            <DataGridTextColumn Header="Описание" 
                                                Binding="{Binding Description}"
                                                Width="250"/>

                            <DataGridTextColumn Header="Категория" 
                                                Binding="{Binding Category}"
                                                Width="120"/>

                            <DataGridTextColumn Header="Сумма" 
                                                Binding="{Binding Amount, StringFormat={}{0} ₽}"
                                                Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsIncome}" Value="False">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Тип" 
                                                Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                <Setter Property="Text" Value="Доход"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsIncome}" Value="False">
                                                <Setter Property="Text" Value="Расход"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- Нижняя панель -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">

            <Button Content="Отмена" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#9E9E9E"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="CancelButton_Click"/>

            <Button x:Name="ImportButton" 
                    Content="Импортировать" 
                    Width="120" 
                    Height="35"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    IsEnabled="False"
                    Click="ImportButton_Click"/>

        </StackPanel>

    </Grid>

</Window>