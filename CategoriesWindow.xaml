<Window x:Class="MoneyFlowWPF.CategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Категории" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Управление категориями" 
                   FontSize="20"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Margin="0,0,0,10"/>

        <!-- Список категорий -->
        <DataGrid x:Name="CategoriesGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="None"
                  CanUserSortColumns="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" 
                                    Binding="{Binding Name}"
                                    Width="*"/>
                <DataGridTextColumn Header="Тип" 
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                    <Setter Property="Text" Value="Доход"/>
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsIncome}" Value="False">
                                    <Setter Property="Text" Value="Расход"/>
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="➕ Добавить" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="AddCategory_Click"/>
            <Button Content="🗑️ Удалить" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="DeleteCategory_Click"/>
            <Button Content="Закрыть" 
                    Width="80" 
                    Height="30"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>