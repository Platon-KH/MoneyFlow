<Window x:Class="MoneyFlowWPF.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Помощь и о программе" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="💰 Финансовый Ассистент" 
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="VersionText"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Foreground="Gray"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Основной текст -->
        <ScrollViewer Grid.Row="1">
            <TextBlock x:Name="HelpText"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Text="" />
        </ScrollViewer>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="2"
                Content="Закрыть"
                Width="100"
                Height="35"
                HorizontalAlignment="Right"
                Margin="0,20,0,0"
                Click="CloseButton_Click"/>
    </Grid>
</Window>